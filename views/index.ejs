            /* Без обводки */
            border-radius: 50%;
            /* Круглая кнопка */
            padding: 0%;
            /* Отступы вокруг иконки */
            cursor: pointer;
            /* Указатель курсора */

            opacity: 0;
            /* Скрыта изначально */
            visibility: hidden;
            /* Скрыта изначально */
            pointer-events: none;
            /* Блокирует клики по скрытой кнопке */
            transition: opacity 0.3s ease, visibility 0s 0.3s;
            /* Плавный переход */
        }

        .videos__item:hover .videos__play {
            opacity: 1;
            /* Появляется при наведении */
            visibility: visible;
            /* Видна при наведении */
            pointer-events: auto;
            /* Разрешаем клики по кнопке при видимости */
            transition: opacity 0.3s ease, visibility 0s 0s;
            /* Плавный переход */
        }

        /* Название видео */
        .videos__video-heading {
            margin-top: 5%;
            /* Отступ от видео */
            font-size: 16px;
            /* Размер шрифта */
            color: white;
            /* Цвет текста */
            font-family: 'GraphikLCG-Regular', sans-serif;
            margin-bottom: 6%;
            text-align: left;
        }

        .main-footer {
            width: 100%;
            padding: 0%;
            background-color: #fff;
        }

        /* Верхняя часть футера с логотипом и меню */
        .footer-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.8% 0%;
        }

        .footer-logo {
            width: 30%;
            margin-left: 17%;
        }

        .footer-main-menu {
            display: flex;
            list-style: none;
            margin: 0%;
            padding: 0%;
