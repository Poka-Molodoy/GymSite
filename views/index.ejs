        /* Основные стили */
        .category__heading {
            margin: 0% auto 4%;
            margin-left: 17%;
            color: #333;
            font-size: 20px;
            font-family: 'GraphikLCG-Medium', sans-serif;
        }

        .category__heading::before {
            content: '';
            display: block;
            height: 1px;
            background-color: #333;
            margin: 100px auto 30px;
            margin-right: 250px;
        }

        .category__heading::after {
            content: '';
            display: block;
            position: absolute;
            right: 250px;
            width: 10px;
            height: 10px;
            margin-top: -15px;
            background-color: #333;
        }

        .category__list {
            display: flex;
            gap: 2.2%;
            list-style: none;
            padding: 0%;
            flex-wrap: wrap;
            /* Разрешаем перенос на новую строку */
            margin-left: 17%;
            font-family: 'GraphikLCG-Regular', sans-serif;
            color: #333;
        }

        .category__item {
            display: flex;
            flex-direction: column;
            position: relative;
            width: 100%;
            /* Элементы будут занимать 100% ширины родительского контейнера */
            max-width: 26.5%;
            /* Ограничение максимальной ширины элемента */
            flex-grow: 1;
            /* Элементы могут расширяться */
            transition: all 0.3s ease;
        }

        .category__img {
            width: 100%;
            /* Картинка будет адаптироваться под ширину родительского элемента */
            height: auto;
            /* Высота будет пропорционально изменяться */
            object-fit: cover;
            /* Картинка будет масштабироваться, сохраняя пропорции */
            transition: filter 0.3s ease, transform 0.3s ease;
            /* Плавное изменение яркости и масштаба */
        }

        /* Темнение картинки при наведении */
        .category__item:hover .category__img {
            filter: brightness(50%);
            /* Темнение картинки */
        }

        /* Стили для списка */
        .category__sub-list {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            /* Центрируем по обеим осям */
            list-style: none;
            padding: 0%;
            margin: 0%;
            opacity: 0%;
            /* Скрываем список по умолчанию */
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0s 0.3s;
            /* Плавное появление */
            line-height: 1.2;
            margin-bottom: 2.2%;
            width: 90%;
            text-align: left;
            /* Выравнивание текста по левому краю */
        }

        .category__item:hover .category__sub-list {
            opacity: 1;
            visibility: visible;
            transition: opacity 0.3s ease, visibility 0s 0s;
            /* Плавное появление списка */
        }

        /* Появление каждого элемента списка по очереди */
        .category__sub-item {
            font-size: 16px;
            color: white;
            font-family: 'GraphikLCG-Regular', sans-serif;
            margin: 0%;
            margin-bottom: 4.4%;
            opacity: 0;
            /* По умолчанию скрываем элементы списка */
            transition: opacity 0.3s ease-in-out;
            /* Выравнивание текста по левому краю */
            text-align: left;
            padding-left: 2.2%;
            /* Добавляем немного отступа для текста */
        }

        /* Элементы списка появляются по очереди */
        .category__item:hover .category__sub-item:nth-child(1) {
            opacity: 1;
            transition-delay: 0.1s;
        }

        .category__item:hover .category__sub-item:nth-child(2) {
            opacity: 1;
            transition-delay: 0.2s;
        }

        .category__item:hover .category__sub-item:nth-child(3) {
            opacity: 1;
            transition-delay: 0.3s;
        }

        /* Стили для заголовка */
        .category__sub-heading {
            color: #333;
            font-size: 16px;
            font-family: 'GraphikLCG-Regular', sans-serif;
            margin-bottom: 3.3%;
        }

        /* Медиазапросы для адаптации на разных экранах */
        @media (max-width: 1024px) {
            .category__list {
                flex-direction: row;
                /* Элементы остаются в строку */
            }

            .category__item {
                max-width: 300px;
                /* Ограничение ширины элементов на экранах до 1024px */
            }
        }

        @media (max-width: 768px) {
            .category__list {
                flex-direction: column;
                /* Ставим элементы списка в столбик на экранах до 768px */
                margin-left: 0;
                /* Убираем отступ слева */
            }

            .category__item {
                max-width: 100%;
                /* На маленьких экранах элементы могут занимать всю ширину */
            }

            .category__heading {
                margin-left: 0;
                /* Убираем отступ слева для заголовков */
            }

            .category__img {
                height: 200px;
                /* Ограничиваем высоту изображений для маленьких экранов */
            }
        }

        @media (max-width: 480px) {
            .category__heading {
                font-size: 18px;
                /* Уменьшаем размер шрифта заголовков на маленьких экранах */
            }

            .category__sub-item {
                font-size: 14px;
                /* Уменьшаем размер шрифта пунктов списка */
            }

            .category__img {
                height: 180px;
                /* Дополнительное уменьшение высоты картинок на смартфонах */
            }
        }

        .videos {
