        body {
            margin: 0%;
            padding: 0%;
            scroll-behavior: smooth;
            overflow-x: hidden;
        }

        .main-header {
            position: fixed;
            /* Закрепляем элемент */
            top: 0%;
            /* Размещаем панель в верхней части экрана */
            right: 0%;
            left: 0%;
            width: 100%;
            background-color: #fff;
            display: flex;
            justify-content: space-between;
            align-items: center;
            z-index: 1000;
        }

        .main-menu {
            display: flex;
            list-style: none;
            margin: 0%;
            padding: 0%;
            margin-left: 62.5%;
        }

        .main-menu__item {
            margin: 0 30px;
            font-size: 14px;
            letter-spacing: 2px;
            color: #333;
            font-family: 'GraphikLCG-Semibold', sans-serif;
        }

        .main-menu__item:first-child {
            margin-left: 0%;
            font-size: 14px;
            letter-spacing: 2px;
            color: #333;
            font-family: 'GraphikLCG-Semibold', sans-serif;
        }

        .main-menu__link {
            text-decoration: none;
            color: #333;
            font-family: 'GraphikLCG-Semibold', sans-serif;
            font-size: 14px;
            letter-spacing: 2px;
        }

        .main-menu__soc-links {
            position: relative;
            /* Делаем элемент относительным, чтобы z-index работал */
            z-index: 2000;
            /* Социальные иконки будут выше панели */
